//- Все примеси в этом файле должны начинаться c имени блока (header)

mixin header(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +header('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' header_' + modsList[i].trim();
      }
    }

  .header(class=allMods)&attributes(attributes)
    .header__logo
      +logo()
    .header__nav
      +navigation()
    .header__btn
      .header__rectangle
      .header__user="Cosmin Negoita"
      .header__btn-sign
        +button('login', 'color_white')
      .header__btn-registration
        +button('register', "color_purple")
      block
