      </linearGradient>
      <linearGradient id="paint2_linear" x1="59" y1="1" x2="59" y2="121" gradientUnits="userSpaceOnUse">
      <stop stop-color="#6FCF97"/>
      <stop offset="1" stop-color="#66D2EA"/>
      </linearGradient>
      </defs>
      </svg>
    block
